<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2E7BB4"
    android:padding="20dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un Nivel"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Estrellas totales -->
    <TextView
        android:id="@+id/tv_total_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⭐ Estrellas:  0/15"
        android:textSize="24sp"
        android:textColor="#FFD700"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Grid de niveles -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center">

        <!-- Los botones se agregarán programáticamente -->

    </GridLayout>

    <!-- Botón de reiniciar progreso -->
    <Button
        android:id="@+id/btn_reset_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar Progreso"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F44336" />

</LinearLayout>